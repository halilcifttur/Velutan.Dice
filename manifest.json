{
    "manifest_version": 0.1,
    "name": "Velutan Zar",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "scripting", "windows"],
    "web_accessible_resources": [
      {
          "resources": ["css/velutanStyle.css"],
          "matches": ["https://www.dndbeyond.com/*"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["https://www.dndbeyond.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "description": "This extension offers quick and customizable keyboard shortcuts for dice rolling and UI customization for D&D Beyond."
  }  